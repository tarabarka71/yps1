@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/refs/heads/master/C4_Context.puml

Person(user, "Клиент")
Person(tech, "Сотрудник компании", "Подключает новые устройства, отключает устройства")
System(warmhouse, "«Теплый дом»")
System_Ext(device, "Устройство (датчик или контроллер")
Rel(tech, device, "Регистрирует в системе")
Rel(tech, warmhouse, "Подключает новое устройство, удаляет")
Rel(user, warmhouse, "Просматривает и управляет устройствами")
Rel(warmhouse, device, "Получает значения датчиков, отправляет команды")

@enduml